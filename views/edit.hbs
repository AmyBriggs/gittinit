<div class="container">
  <h3>Editing {{user.username}}</h3>
  <form class="" name="edit-user-form" action="/profile" method="put" id="edit-profile-form">
    <div class="row">
      <div class="input-field col-sm-12">
        <label for="title">Display Name</label>
        <input class="input-field col-sm-12" name="name" type="text" placeholder="{{user._json.name}}">
      </div>
      <div class="input-field col-sm-12">
        <label for="title">Location</label>
        <input class="input-field col-sm-12" name="location" type="text" placeholder="{{user._json.location}}">
      </div>
      <div class="input-field col-sm-12">
        <label for="title">Company</label>
        <input class="input-field col-sm-12" name="company" type="text" placeholder="{{user._json.company}}">
      </div>
      <button type="submit" id="edit-profile-btn" class="waves-effect waves-light btn-large">Submit</button>
    </div>
  </form>
</div>
