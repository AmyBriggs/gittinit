  <left class="col s2">
    <h3 class="center-align"><a href={{user.profileUrl}}>{{user.username}}</a></h3>
    <img class="responsive-img" src= {{user._json.avatar_url}} />
    <p>Display Name: {{user._json.name}}</p>
    <p>Located In: {{user._json.location}}</p>
    <p>Company: {{user._json.company}}</p>
    <p><a href= {{user.profileUrl}} ?tab=repositories>Repos:</a>
      <br> &nbsp;&nbsp;Public: {{user._json.public_repos}}
      <br> &nbsp;&nbsp;Private: {{user._json.total_private_repos}}</p>
      <p><a href= {{user.profileUrl}} ?tab=followers>Followers: </a>{{user._json.followers}}</p>
      <p><a href= {{user.profileUrl}} ?tab=following>Following: </a>{{user._json.following}}</p>
      <a class="waves-effect waves-light btn" id="edit-profile"><i class="material-icons right">mode_edit</i>Edit</a>
    </left>
    <right class="col s10">
      <!-- Cards for team members -->
      {{#each g32ers}}
        <div class="col s3 m3">
          <div class="card small">
            <h3 class="center-align"><a href={{profileUrl}}>{{username}}</a></h3>
          </div>
        </div>
      {{/each}}
    </right>
</div>
