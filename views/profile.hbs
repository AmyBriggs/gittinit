<profile class="row">
  <left class="col s2">
    <h3 class="center-align">Welcome!</h3>
    <img class="responsive-img" src={{user._json.avatar_url}} />
    <p id="username"><a href={{user.profileUrl}}>{{user.username}}</a></p>
    <p>Display Name: {{user._json.name}}</p>
    <p>Located In: {{user._json.location}}</p>
    <p>Company: {{user._json.company}}</p>
    <p><a href={{user.profileUrl}}?tab=repositories>Repos:</a><br>
    &nbsp;&nbsp;Public: {{user._json.public_repos}}<br>
    &nbsp;&nbsp;Private: {{user._json.total_private_repos}}</p>
    <p><a href={{user.profileUrl}}?tab=followers>Followers: </a>{{user._json.followers}}</p>
    <p><a href={{user.profileUrl}}?tab=following>Following: </a>{{user._json.following}}</p>
    <a class="waves-effect waves-light btn" id="edit-profile"><i class="material-icons"></i>Edit</a>
    <a class="waves-effect waves-light btn" id="home-profile" href="/"><i class="material-icons"></i>Home</a>
    <a class="waves-effect waves-light btn" id="profile-logout" href="splash"><i class="material-icons"></i>Logout</a>
  </left>
  <right class="col s10">
    <div id="repos"></div>
  </right>
</profile>
<script src="./js/profile.js"></script>
