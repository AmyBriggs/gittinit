<profile class="row">
  <left class="col s2">
    <h3 class="center-align">Welcome!</h3>
    <img class="responsive-img" src={{user._json.avatar_url}} />
    <p><a href={{user.profileUrl}}>{{user.username}}</a></p>
    <p>Display Name: {{user._json.name}}</p>
    <p>Located In: {{user._json.location}}</p>
    <p>Company: {{user._json.company}}</p>
    <p><a href={{user.profileUrl}}?tab=repositories>Repos:</a><br>
    &nbsp;&nbsp;Public: {{user._json.public_repos}}<br>
    &nbsp;&nbsp;Private: {{user._json.total_private_repos}}</p>
    <p><a href={{user._json.followers_url}}>Followers: </a>{{user._json.followers}}</p>
    <p><a href={{user._json.following_url}}>Following: </a>{{user._json.following}}</p>
  </left>
</profile>
